<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Connect" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/titulosResaltados</item>
        <item name="colorPrimaryVariant">@color/colorPrincipal</item>
        <item name="colorOnPrimary">@color/textoOscuro</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/titulosResaltados</item>
        <item name="colorSecondaryVariant">@color/colorPrincipal</item>
        <item name="colorOnSecondary">@color/textoOscuro</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/textoOscuro</item>
        <item name="hintTextColor">@color/textoClaro</item>
    </style>
</resources>