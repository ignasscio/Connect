<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/conversation_friendProfilePicture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/btn_amigos" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/conversation_friendName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:text="Elizabeth"
            android:textColor="@color/textoOscuro"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/conversation_friendLastMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="20"
            android:text="Heeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeey"
            android:textColor="@color/textoMedio"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>