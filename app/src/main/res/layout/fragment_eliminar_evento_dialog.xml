<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_style"
    android:padding="15dp"
    tools:context=".fragments.EliminarEventoFragmentDialog">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/eliminarEvento_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/seguroDeEliminar"
            android:textColor="@color/textoOscuro"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/eliminarEvento_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/desc_seguroDeElminar"
            android:textColor="@color/textoClaro" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <Button
                android:id="@+id/alertaAmistad_btn_cancelar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/boton_cancelar"
                android:padding="5dp"
                android:text="Cancelar"
                android:textColor="@color/white" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/alertaAmistad_btn_aceptar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/boton_aceptar"
                android:padding="5dp"
                android:text="Confirmar"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>